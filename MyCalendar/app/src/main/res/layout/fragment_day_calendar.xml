<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/picture"
    android:id="@+id/dayCalendarFragment"
    tools:context=".DayCalendarFragment">
    <RelativeLayout
        android:id="@+id/dayCalendarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tableLayout"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMonthYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:text="Tháng 5 - 2021"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_gravity="center"></TextView>
            <ImageButton
                android:id="@+id/todayButton"
                android:background="#55ffffff"
                android:src="@drawable/calendar_today"
                android:scaleType="fitCenter"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content"></ImageButton>
            <TextView
                android:id="@+id/tvDayOfMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="18"
                android:textSize="90dp"
                app:layout_constraintTop_toBottomOf="@id/tvMonthYear"></TextView>

            <TextView
                android:id="@+id/tvDayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỨ HAI"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tvDayOfMonth"></TextView>

            <TextView
                android:id="@+id/tvMaxim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Người quan tâm đến tôi, tôi sẽ quan tâm lại gấp bội! - Vô danh"
                android:gravity="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDayOfMonth" />
        </LinearLayout>
        <TableLayout
            android:background="#55FFFFFF"
            android:id="@+id/tableLayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:stretchColumns="0,2">
            <TableRow
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21:28"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="35dp"></TextView>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yin_yang_red">

                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="Kỷ Hợi"
                        android:gravity="center"
                        android:textSize="20dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/yin_yang_black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="7"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="60dp"></TextView>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tháng 4"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="20dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cellLunarDayText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="Ng. Bính Dần"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Th. Quý Tỵ"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Năm Tân Sửu"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="17dp"></TextView>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>